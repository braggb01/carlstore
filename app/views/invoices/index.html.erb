<h1>Listing invoices</h1>

<table>
  <tr>
    <th>Event start</th>
    <th>Event end</th>
    <th>Event address</th>
    <th>Authorized</th>
    <th>Closed</th>
    <th>Customer</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @invoices.each do |invoice| %>
  <tr>
    <td><%= invoice.event_start %></td>
    <td><%= invoice.event_end %></td>
    <td><%= invoice.event_address %></td>
    <td><%= invoice.authorized %></td>
    <td><%= invoice.closed %></td>
    <td><%= invoice.customer_id %></td>
    <td><%= link_to 'Show', invoice %></td>
    <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
    <td><%= link_to 'Destroy', invoice, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

